<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/HomeFragment_main"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/HomeFragment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/HomeFragment_textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/HomeFragment_textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/HomeFragment_textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/HomeFragment_textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </LinearLayout>

            <ImageView
                android:id="@+id/HomeFragment_imageView1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/octpas" />

            <ListView
                android:id="@+id/HomeFragment_listView1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/HomeFragment_LinearLayout_menu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#000000"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/HomeFragment_radioGroup1_menuButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/HomeFragment_radio0_story"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_story"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/HomeFragment_radio1_adventure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_adventure"
                android:button="@null" />

            <RadioButton
                android:id="@+id/HomeFragment_radio2_customize"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:button="@null" />

            <RadioButton
                android:id="@+id/HomeFragment_radio3_shop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_shop"
                android:button="@null" />

            <RadioButton
                android:id="@+id/HomeFragment_radio4_setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_setting"
                android:button="@null" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>